.circle {
  margin: 50px auto;
  position:relative;
  width:90px;
  height: 90px;
  border-radius: 50%;
  justify-content: flex-start;
  background-color: lightskyblue;
  text-align:center;
  line-height: 90px;
}
.section{
   height: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 50rpx 0;
  box-sizing: border-box;
}
.bc_green{
    background:lightskyblue;
}
.bc_red{
    background:red;
}
.bc_blue{
    background:pink;
}
.bc_yellow{
